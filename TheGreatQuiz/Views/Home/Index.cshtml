    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <link rel="stylesheet" href="~/Content/Site.css">
    <link rel="stylesheet" href="~/Content/unsemantic-grid-responsive-tablet.css">
</head>
<body class="loginBody">
    <header class="mainHeader"></header>

    <div class="grid-container">

        <section class="grid-100 grid-parent">
            <div class="loginWindow grid-60 prefix-20">
                <h1>Newton</h1>
                <form class="loginForm">
                    <input type="text" id="loginEmail" class="inputBox" placeholder="Email" maxlength="50" />
                    <input type="password" id="loginPassword" class="inputBox" placeholder="Password" maxlength="50" /><br><br><br>
                    <input type="button" value="Login" class="logRegButton" id="loginButton" />
                    <input type="button" value="Register" class="logRegButton" id="registerButton" />
                </form>
            </div>

        </section>

    </div>


</body>
</html>
